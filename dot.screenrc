#3.3
shell -/bin/bash
shelltitle Shell
vbell off
defscrollback 5000
termcapinfo xterm 'hs:ts=\E]2;:fs=\007:ds=\E]2;screen\007'
backtick 0 30 30 sh -c 'echo $HOST_TITLE'
hardstatus string "%` - %n %t - %D %Y-%m-%d %c"

attrcolor d "=d"
attrcolor u "=u"
attrcolor b "=b"
attrcolor r "=r"
attrcolor s "=s"
attrcolor B "=B"

