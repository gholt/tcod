#!/bin/bash

hostname=`hostname`
if [ "$hostname" = "ML304ZFFT3" ] ; then
    hostname="laptop"
elif [ "$hostname" = "admin1" ] ; then
    hostname=`hostname -d | cut -d. -f1`
fi
export PS1="\[\e]0;\u@$hostname\a\]\u@$hostname:\W\$ "

alias dshact='dsh -m`/home/gholt/ring-hosts /etc/swift/account.ring.gz`'
alias dshcon='dsh -m`/home/gholt/ring-hosts /etc/swift/container.ring.gz`'
alias dshobj='dsh -m`/home/gholt/ring-hosts /etc/swift/object.ring.gz`'
