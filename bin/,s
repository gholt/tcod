#!/bin/bash

function check {
    o=`git status | grep -v "On branch master" | grep -v "Your branch is up-to-date with 'origin/master'." | grep -v "nothing to commit, working directory clean"`
    if [ "$o" ] ; then
        echo -n "█████ "
        pwd
        echo "$o"
    fi
}

cd ~/src/github.com/gholt
for i in * ; do
    cd $i
    check
    cd ..
done
cd ~/src/github.com/pandemicsyn
for i in * ; do
    cd $i
    check
    cd ..
done
cd ~/src/github.com/creiht
for i in * ; do
    cd $i
    check
    cd ..
done
cd ~/src/github.com/letterj
for i in * ; do
    cd $i
    check
    cd ..
done
